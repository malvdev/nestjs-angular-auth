{
  "name": "nestjs-angular-auth",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run init",
    "init": "npm run init:web && npm run init:api && npm run prepare",
    "init:web": "cd ./frontend && npm install",
    "init:api": "cd ./backend && npm install",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/malvdev/nestjs-angular-auth.git"
  },
  "keywords": [
    "nestjs",
    "angular",
    "authentication",
    "auth"
  ],
  "bugs": {
    "url": "https://github.com/malvdev/nestjs-angular-auth/issues"
  },
  "homepage": "https://github.com/malvdev/nestjs-angular-auth#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "husky": "^6.0.0"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": ">=6.0.0"
  }
}
